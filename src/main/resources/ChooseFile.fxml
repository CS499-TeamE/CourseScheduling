<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ChooseFileController">
   <children>
      <HBox fx:id="hBox">
         <children>
            <BorderPane prefHeight="372.0" prefWidth="467.0">
               <bottom>
                  <ButtonBar BorderPane.alignment="CENTER">
                    <buttons>
                        <Button fx:id="submitButton" mnemonicParsing="false" onAction="#submit" text="Submit" translateX="-5.0" translateY="-5.0" />
                      <Button fx:id="clearButton" mnemonicParsing="false" onAction="#clear" text="Clear" translateX="-5.0" translateY="-5.0" />
                    </buttons>
                  </ButtonBar>
               </bottom>
               <top>
                  <GridPane BorderPane.alignment="CENTER">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" maxWidth="289.0" minWidth="10.0" prefWidth="225.0" />
                      <ColumnConstraints hgrow="SOMETIMES" maxWidth="350.0" minWidth="10.0" prefWidth="242.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints />
                      <RowConstraints maxHeight="140.0" minHeight="10.0" prefHeight="140.0" vgrow="SOMETIMES" />
                      <RowConstraints maxHeight="106.0" minHeight="10.0" prefHeight="101.0" vgrow="SOMETIMES" />
                        <RowConstraints maxHeight="147.0" minHeight="10.0" prefHeight="91.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Button fx:id="selectFileButton" mnemonicParsing="false" onAction="#selectFile" text="Select File" translateX="167.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <TextField fx:id="textField" editable="false" translateX="-75.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="File Path :" translateX="95.0" GridPane.rowIndex="2" />
                        <Label text="Enter Location of File Path to Input File" translateX="25.0" translateY="12.0" GridPane.rowIndex="1">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Label>
                     </children>
                  </GridPane>
               </top>
            </BorderPane>
         </children>
      </HBox>
   </children>
</AnchorPane>
